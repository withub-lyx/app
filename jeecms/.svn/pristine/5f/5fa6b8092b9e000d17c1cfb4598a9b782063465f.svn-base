   <script src="${resSys}/echarts/util/mapData/params.js"></script>
     <link href="${resSys}/echarts/asset/css/font-awesome.min.css" rel="stylesheet">
    <link href="${resSys}/echarts/asset/css/bootstrap.css" rel="stylesheet">
