    function gotoFyDetail(value){
    	//隐藏地图和法院列表
    	document.getElementById('mainMap').style.display='none';
    	document.getElementById('rightTitle').style.display='none';
    	document.getElementById('rightNav').style.display='block';
    	//得到所有法院介绍列表
    	var tex = document.getElementsByClassName("texFyzy");
    	for(var i=0;i<tex.length;i++){
    		var string1 = tex[i].innerHTML.split("<h3>");
    		var string2 = string1[1].split("</h3>");
    		var fymc = string2[0];
    		//当列表中的title与法院名相同时则显示
    		if(fymc==value){
    			tex[i].style.display='block';
    		}
    		else{
    			tex[i].style.display='none';
    		}
    		
    	}
    };
    function returnToMap(){
    	var tex = document.getElementsByClassName("texFyzy");
    	for(var i=0;i<tex.length;i++){
    	    tex[i].style.display='none';
    	}
    	document.getElementById('mainMap').style.display='block';
    	document.getElementById('rightTitle').style.display='block';
    }
    
