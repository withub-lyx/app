<script type="text/javascript">
$(function(){
	var rightNav_active = $(".adv_active");
	var rightNav_scroll = function(target){
		rightNav_active.removeClass	("adv_active");
		target.parent().addClass("adv_active");
		rightNav_active = target.parent();
	};
	$("#rightNav a").click(function(){
		rightNav_scroll($(this));
		var target = $(this).attr("href");
		var targetScroll = $(target).offset().top;
		$("html,body").animate({scrollTop:targetScroll},300);
		return false;
	});
	//页面跳转时定位
	if(window.location.hash){
		var targetScroll = $(window.location.hash).offset().top - 80;
		$("html,body").animate({scrollTop:targetScroll},300);
	}
	$(window).scroll(function(){
		var $this = $(this);
		var targetTop = $(this).scrollTop();
		var footerTop = $("#footer").offset().top;
		var height = $(window).height();
		var fygkTop = $("#fygk").offset().top;
		var gxfwTop = $("#gxfw").offset().top;
		var bmjznTop = $("#bmjzn").offset().top;
		var swhzcryTop = $("#swhzcry").offset().top;
		var fydzTop = $("#fydz").offset().top;
		var tsqdTop = $("#tsqd").offset().top;
		
		if (targetTop >= 520){
			var left = $("#rightNav").position().left
			var top = $("#rightNav").position().top;
			$("#rightNav")
			.css("position","fixed")
			.css("left",left)
			.css("top","100px");
		//	$("#rightNav").addClass("fixedSubNav");
		//	$(".empty-placeholder").removeClass("hidden");
		}else{
			$("#rightNav").css("position","static");
		//	$("#rightNav").removeClass("fixedSubNav");
		//	$(".empty-placeholder").addClass("hidden");
		}
		if(targetTop < 750){
			rightNav_scroll($(".adv_door"));
		}else if(targetTop > 1200 && targetTop < fygkTop){
				rightNav_scroll($(".adv_source"));
		}else if(targetTop > fygkTop && targetTop < gxfwTop){
				rightNav_scroll($(".adv_price"));
		}else if(targetTop > gxfwTop && targetTop < bmjznTop){
				rightNav_scroll($(".adv_transfer"));
		}else if(targetTop > bmjznTop && targetTop < swhzcryTop){
				rightNav_scroll($(".adv_payment"));
		}else if(targetTop > swhzcryTop && targetTop < fydzTop){
				rightNav_scroll($(".adv_promise"));
		}else if(targetTop > fydzTop && targetTop < tsqdTop){
				rightNav_scroll($(".adv_ride"));
		}else if(targetTop > tsqdTop){
			rightNav_scroll($(".adv_finance"));
		}
	})
});
				

    function gotoFyDetail(value){
    	//隐藏地图和法院列表
    	document.getElementById('mainMap').style.display='none';
    	document.getElementById('rightTitle').style.display='none';
    	document.getElementById('rightNav').style.display='block';
    	//得到所有法院介绍列表
    	var tex = document.getElementsByClassName("texFyzy");
    	for(var i=0;i<tex.length;i++){
    		var string1 = tex[i].innerHTML.split("<h3>");
    		var string2 = string1[1].split("</h3>");
    		var fymc = string2[0];
    		//当列表中的title与法院名相同时则显示
    		if(fymc==value){
    			tex[i].style.display='block';
    		}
    		else{
    			tex[i].style.display='none';
    		}
    		
    	}
    };
    function returnToMap(){
    	var tex = document.getElementsByClassName("texFyzy");
    	for(var i=0;i<tex.length;i++){
    	    tex[i].style.display='none';
    	}
    	document.getElementById('mainMap').style.display='block';
    	document.getElementById('rightTitle').style.display='block';
    }
    
</script>

